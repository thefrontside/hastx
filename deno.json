{
  "name": "@frontside/hastx",
  "version": "0.3.0",
  "exports": {
    ".": "./mod.ts",
    "./jsx-runtime": "./jsx-runtime.ts",
    "./html": "./html.ts",
    "./svg": "./svg.ts"
  },
  "license": "ISC",
  "tasks": {
    "build:npm": "deno run -A tasks/build-npm.ts",
    "build:jsr": "deno run -A tasks/build-jsr.ts"
  },
  "fmt": {
    "exclude": [
      "build"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "prefer-const",
        "no-slow-types"
      ]
    },
    "exclude": [
      "build"
    ]
  },
  "imports": {
    "hast": "npm:@types/hast@^3.0.0",
    "hastx/": "./",
    "hastx/jsx-runtime": "./jsx-runtime.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hastx"
  },
  "publish": {
    "exclude": ["test", "tasks"]
  }
}
